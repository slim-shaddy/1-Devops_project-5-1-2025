Vagrant.configure("2") do |config|
  # AlmaLinux base box
  config.vm.box = "almalinux/9"

  # Hostname (useful for Terraform + SSH)
  config.vm.hostname = "alma-terraform"

  # Static private IP
  config.vm.network "private_network", ip: "192.168.0.56"

  # Provider settings
  config.vm.provider "virtualbox" do |vb|
    vb.name = "alma-terraform"
    vb.memory = 2048
    vb.cpus = 2
  end

  # Optional: SSH settings (Terraform-friendly)
  config.ssh.insert_key = false

  # Optional provisioning example (can remove if not needed)
  config.vm.provision "shell", inline: <<-SHELL
    dnf -y update
    dnf -y install wget unzip git
  SHELL
end
